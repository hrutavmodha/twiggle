{
    "compilerOptions": {
        "module": "es2020",
        "target": "esnext",
        "outDir": "dist",
        "types": [],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        "baseUrl": ".",
        "jsx": "react-jsx",
        "jsxImportSource": "client/src/jsx",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "skipLibCheck": true
    },
    "exclude": [
        "client/**/*.{jsx,tsx,js}",
        "client/tests",
        "server/tests"
    ]
}