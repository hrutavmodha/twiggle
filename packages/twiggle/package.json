{
    "name": "twiggle",
    "version": "1.3.0",
    "type": "module",
    "author": "Hrutav Modha",
    "maintainers": [
        "Hrutav Modha"
    ],
    "types": "./types/twiggle.d.ts",
    "files": [
        "./dist",
        "./types",
        "./package.json",
        "./README.md"
    ],
    "keywords": [
        "frontend",
        "twiggle",
        "routing",
        "state management"
    ],
    "exports": {
        "./client": {
            "types": "./types/twiggle.d.ts",
            "import": "./dist/client/twiggle-es.js"
        },
        "./server": {
            "types": "./types/twiggle.d.ts",
            "import": "./dist/server/twiggle-es.js",
            "require": "./dist/server/twiggle-es.js"
        },
        "./client/jsx-runtime": {
            "types": "./types/jsx.d.ts",
            "import": "./dist/client/twiggle-es.js"
        },
        "./client/jsx-dev-runtime": {
            "types": "./types/jsx.d.ts",
            "import": "./dist/client/twiggle-es.js"
        },
        "./server/jsx-runtime": {
            "types": "./types/jsx.d.ts",
            "import": "./dist/server/twiggle-es.js"
        },
        "./server/jsx-dev-runtime": {
            "types": "./types/jsx.d.ts",
            "import": "./dist/server/twiggle-es.js"
        }
    },
    "scripts": {
        "start": "vite",
        "build:client": "vite build --config vite.config.client.ts",
        "build:server": "vite build --config vite.config.server.ts",
        "build": "npm run build:client && npm run build:server && echo \"Build successfully\"",
        "test": "vitest",
        "test:ui": "vitest --ui"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/babel__helper-plugin-utils": "^7.10.3",
        "@types/node": "^24.5.2",
        "@vitest/ui": "^1.6.0",
        "jsdom": "^27.0.0",
        "typescript": "^5.9.2",
        "vite": "^7.1.7",
        "vitest": "^1.6.0"
    }
}
